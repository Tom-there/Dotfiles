set hidden true
set shell zsh
set shellopts '-eu'
set ifs "\n"
set scrolloff 8



# open commands
cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$$EDITOR \$fx";;
    application/pdf) zathura $f > /dev/null 2> /dev/null &;;
    *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
  esac
}}
